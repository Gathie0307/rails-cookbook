<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path "banner.jpg" %>);">
  <div class="container">
    <h1>Cookbook</h1>
    <p>Save your favourites recipes</p>
  </div>
</div>

  <div class="container">
   <div class="d-flex justify-content-between py-3 align-items-center">
    <h1>List of Categories</h1>
    <%= link_to "new category", new_category_path, class: "btn btn-primary"%>
    </div>

  <div class="card-container">
   <% @categories.each do |category| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <h3><%=  link_to category.name.capitalize, category_path(category) %></h3>
      <p><%= category.recipes.length%></p>
      <%= link_to "X", category_path(category),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "card-category-icon" %>
    </div>
   <% end %>
  </div>
</div>
