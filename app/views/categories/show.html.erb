
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path "recipe_banner.jpg" %>);">
  <div class="container">
    <h1><%= @category.name %></h2>
  </div>
</div>

<div class="container">
 <div class="d-flex justify-content-between py-3 align-items-center">
    <h1>Recipes</h2>
    <%= link_to "Add a recipe" ,new_category_bookmark_path(@category) ,class: "btn btn-primary"%>
  </div>
 <div class= "card-container">
  <% @category.bookmarks.each do |bookmark| %>
    <div class="card-recipe">
        <%= image_tag bookmark.recipe.image_url%>
          <div class="p-3">
              <h2><%= bookmark.recipe.name %></h2>
              <p><%= bookmark.recipe.description %></p>
          </div>
          <div class="card-recipe-infos">
             <h2><%= bookmark.comment %></h2>
             <p><%= bookmark.recipe.rating %></p>
             <%= link_to "X", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "card-category-icon" %>
          </div>
    </div>
 <% end %>
</div>
</div>
